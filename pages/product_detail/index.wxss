.product-detail .swiper-box swiper {
  height: 100vw;
}
.product-detail .product-info .product-price {
  padding: 15rpx;
  font-size: 42rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.product-detail .product-info .product-name {
  padding: 15rpx;
  font-size: 40rpx;
  font-weight: 600;
  border-top: 1rpx solid #dedede;
}
.product-detail .product-info .product-desc {
  padding: 0 10rpx 25rpx 10rpx;
  border-bottom: 1rpx solid #dedede;
}
.product-detail .desc-tabs .tabs-title {
  display: flex;
}
.product-detail .desc-tabs .tabs-title .title_item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 25rpx;
  font-size: 30rpx;
}
.product-detail .desc-tabs .tabs-title .active {
  color: var(--themeColor);
}
.product-detail .btn-tools {
  position: fixed;
  background-color: #ffffff;
  width: 100vw;
  height: 90rpx;
  padding: 10rpx;
  left: 0;
  bottom: 0;
  display: flex;
}
.product-detail .btn-tools .item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
}
.product-detail .btn-tools .item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.product-detail .btn-tools .btn {
  flex: 4;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
  color: white;
}
.product-detail .btn-tools .btn .add-cart {
  flex: 2;
  border-radius: 50rpx 0 0 50rpx;
  text-align: center;
  padding: 12rpx 15rpx 15rpx 20rpx;
  background-image: linear-gradient(90deg, #fdcf00, #fd9b00);
}
.product-detail .btn-tools .btn .buy-now {
  flex: 2;
  text-align: center;
  padding: 12rpx 10rpx 15rpx 15rpx;
  border-radius: 0 50rpx 50rpx 0;
  background-image: linear-gradient(90deg, #ff7310, #fe3f00);
}
